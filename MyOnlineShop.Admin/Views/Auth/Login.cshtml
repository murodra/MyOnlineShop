@model MyOnlineShop.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<form asp-action="Login" asp-controller="auth" asp-antiforgery="true" method="post" class="user form-horizontal mt-3" id="loginform">
    <input type="hidden" name="returnurl" value="@ViewBag.ReturnUrl" />
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-group">
        @*<label asp-for="Email" class="control-label"></label>*@
        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        @*<label asp-for="Password" class="control-label"></label>*@
        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="checkbox mb-3">
        <label>
            <input asp-for="RememberMe" type="checkbox" value="remember-me"> Remember me
        </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    New user?
     <a href="/auth/register">
    Register
  </a>
    @*<button class="w-100 btn btn-primary" href="/auth/register" >Register</button>*@
</form>