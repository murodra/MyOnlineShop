@model IEnumerable<MyOnlineShop.Ui.Models.StoreViewModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="container">
    <div class="main-body">
        <h1>Store List</h1>
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.StoreName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StoreLogo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StoreName)
                                    </td>
                                    <td>
                                        <img width="100" src="data:image;base64, @item.PictureStr" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        <a href="/store/edit/@item.Id" class="btn btn-warning">
                                            <i class="fa fa-edit"></i>Edit
                                        </a>
                                        <a href="/store/index/@item.Id" class="btn btn-primary">
                                            <i class="material-icons"></i>Shop Profile
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a class="btn btn-info " href="/product/create">Add Product</a>
                </div>
            </div>
        </div>
    </div>
</div>
